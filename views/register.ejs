<form class="form-container" method="POST" action="/patients/registered">
  <h1>Patient registration</h1>
  <p>Please complete all fields.</p>
  <section>
    <h2>Personal information</h2>
    <p>
      <label for="first">First name:</label>
      <input type="text" id="first" name="first" value="<%= formData?.first || '' %>" minlength="1" maxlength="50" required />
      <div class="error-messages">
        <% if (errors?.first?.length) { %>
          <ul>
            <% errors.first.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </p>
    <p>
      <label for="last">Last name:</label>
      <input type="text" id="last" name="last" value="<%= formData?.last || '' %>" minlength="1" maxlength="50" required />
      <div class="error-messages">
        <% if (errors?.last?.length) { %>
          <ul>
            <% errors.last.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </p>
    <p>
      <label for="email">Email address:</label>
      <input type="email" id="email" name="email" value="<%= formData?.email || '' %>" maxlength="120" required />
      <div class="error-messages">
        <% if (errors?.email?.length) { %>
          <ul>
            <% errors.email.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </p>
    <p>
      <label for="nhs">NHS number:</label>
      <input type="text" id="nhs" name="nhs" value="<%= formData?.nhs || '' %>" required />
      <div class="error-messages">
        <% if (errors?.nhs?.length) { %>
          <ul>
            <% errors.nhs.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </p>
  </section>
  <section>
    <h2>Login information</h2>
    <p>
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" value="<%= formData?.username || '' %>" minlength="4" maxlength="30" required />
      <div class="error-messages">
        <% if (errors?.username?.length) { %>
          <ul>
            <% errors.username.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </p>
    <p>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" minlength="8" maxlength="64" required />
      <div class="error-messages">
        <% if (errors?.password?.length) { %>
          <ul>
            <% errors.password.forEach(msg => { %>
              <li><%= msg %></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
    </p>
  </section>
  <section>
    <p><button type="submit">Enter</button></p>
  </section>
</form>
